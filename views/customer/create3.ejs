<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <title>留学生管理平台</title>
        <% include ../module/head %>
        <link href="/css/customer.css" rel="stylesheet" type="text/css" />

        <link href="/global/plugins/bootstrap-modal/css/bootstrap-modal.css" rel="stylesheet" type="text/css">

    </head>
    <!-- END HEAD -->

    <body class="page-header-fixed page-sidebar-closed-hide-logo page-content-white">
        <!-- BEGIN HEADER -->
        <% include ../module/top%>
        <!-- END HEADER -->
        <!-- BEGIN HEADER & CONTENT DIVIDER -->
        <div class="clearfix"> </div>
        <!-- END HEADER & CONTENT DIVIDER -->
        <!-- BEGIN CONTAINER -->
        <div class="page-container">
            <!-- BEGIN SIDEBAR -->
            <% include ../module/left%>
            <!-- END SIDEBAR -->
            <!-- BEGIN CONTENT -->
            <div class="page-content-wrapper">
                <!-- BEGIN CONTENT BODY -->
                <div class="page-content">
                    <!-- BEGIN PAGE HEADER-->

                    <!-- BEGIN PAGE BAR -->
                    <div class="page-bar">
                        <ul class="page-breadcrumb">
                            <li>
                                <a href="/customer/customerlist">客户管理</a>
                                <i class="fa fa-circle"></i>
                            </li>
                            <li>
                                <a href="/customer/customerlist">客户列表</a>
                                <i class="fa fa-circle"></i>
                            </li>
                            <li>
                                <span>王张学</span>
                            </li>
                        </ul>
                    </div>
                    <!-- END PAGE BAR -->
                    <!-- BEGIN PAGE TITLE-->
                    <h3 class="page-title"> 创建留学工单
                    </h3>

                    <div class="portlet-body">
                        <div class="mt-element-step">
                          <div class="row step-thin">
                            <div class="col-md-4 bg-grey mt-step-col done">
                                <div class="mt-step-number bg-white font-grey">1</div>
                                <div class="mt-step-title uppercase font-grey-cascade">信息完善</div>
                                <div class="mt-step-content font-grey-cascade">筛选学校、填写基本信息</div>
                            </div>
                            <div class="col-md-4 bg-grey mt-step-col done">
                                <div class="mt-step-number bg-white font-grey">2</div>
                                <div class="mt-step-title uppercase font-grey-cascade">文书设置</div>
                                <div class="mt-step-content font-grey-cascade">申请留学所需的材料</div>
                            </div>
                            <div class="col-md-4 bg-grey mt-step-col active">
                                <div class="mt-step-number bg-white font-grey">3</div>
                                <div class="mt-step-title uppercase font-grey-cascade">工单确认</div>
                                <div class="mt-step-content font-grey-cascade">确认信息并提交工单</div>
                            </div>
                        </div>
                      </div>
                  </div>
                  <div class="portlet-body form" style="margin-top:25px;">
                     <form action="#" class="form-horizontal" id="submit_form" method="POST">
                         <div class="form-wizard">
                             <div class="form-body">
                  <div class="tab-content">
                      <div class="tab-pane active" id="tab1">
                        <div class="form-group">
                            <label class="control-label col-md-3">申请人
                              <span class="required"> * </span>
                            </label>
                            <div class="col-md-7">
                              <span class="form-control-static"> 张三(身份证：330601523438845555) </span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-3">联系方式
                              <span class="required"> * </span>
                            </label>
                            <div class="col-md-7">
                              <span class="form-control-static"> tel:<span style="margin-right:25px; color:blue;">18804543333</span>
                              email:<span style="margin-right:25px; color:blue;">djwe@qq.com</span> </span>
                            </div>
                        </div>
                          <div class="form-group">
                              <label class="control-label col-md-3">已选学校/专业
                                <span class="required"> * </span>
                              </label>
                              <div class="col-md-7">
                                <span class="form-control-static"> 1、哈佛大学-建筑工程 </span><br>
                                <span class="form-control-static"> 2、麻省理工大学-医学 </span><br>
                                <span class="form-control-static"> 3、剑桥大学-国际金融与贸易 </span><br>
                              </div>
                          </div>
                          <div class="form-group">
                              <label class="control-label col-md-3">需要收集文书资料
                                  <span class="required"> * </span>
                              </label>
                              <div class="col-md-7">
                                  <%for(var j=0;j<5;j++){%>
                                  <span class="form-control-static" style="margin-right:20px; color:blue;"> 文书xx<%= j%> </span>
                                  <%}%>
                                  <span class="form-control-static" style="margin-right:20px; color:blue;"> PS </span>
                                  <span class="form-control-static" style="margin-right:20px; color:blue;"> CV </span>
                              </div>
                          </div>



                          <div class="form-group" style="margin-top:40px;">
                              <div class="col-md-offset-3 col-md-7">
                                  <a href="/customer/create3" class="btn green">确认并提交工单</a>
                              </div>
                          </div>
                      </div>
                  </div>

                </div></div></form></div>

                    <!-- END PAGE TITLE-->
                    <!-- END PAGE HEADER-->

                </div>
                <!-- END CONTENT BODY -->
            </div>
            <!-- END CONTENT -->
        </div>

        <!-- END CONTAINER -->
        <!-- BEGIN FOOTER -->
        <% include ../module/bottom%>
        <!-- END FOOTER -->
        <% include ../module/foot%>
        <!-- BEGIN PAGE LEVEL PLUGINS -->
        <script src="/global/plugins/bootstrap-modal/js/bootstrap-modalmanager.js" type="text/javascript"></script>
        <script src="/global/plugins/bootstrap-modal/js/bootstrap-modal.js" type="text/javascript"></script>
        <!-- END PAGE LEVEL PLUGINS -->
    </body>

</html>
