<% var leftnav="school"%>

<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <title>留学生管理平台</title>
        <% include ../module/head %>
        <link href="/css/customer.css" rel="stylesheet" type="text/css" />
        <link href="/global/plugins/bootstrap-fileinput/bootstrap-fileinput.css" rel="stylesheet" type="text/css">
        <link href="/global/plugins/bootstrap-modal/css/bootstrap-modal-bs3patch.css" rel="stylesheet" type="text/css">
        <link href="/global/plugins/bootstrap-modal/css/bootstrap-modal.css" rel="stylesheet" type="text/css">

    </head>
    <!-- END HEAD -->

    <body class="page-header-fixed page-sidebar-closed-hide-logo page-content-white">
        <!-- BEGIN HEADER -->
        <% include ../module/top%>
        <!-- END HEADER -->
        <!-- BEGIN HEADER & CONTENT DIVIDER -->
        <div class="clearfix"> </div>
        <!-- END HEADER & CONTENT DIVIDER -->
        <!-- BEGIN CONTAINER -->
        <div class="page-container">
            <!-- BEGIN SIDEBAR -->
            <% include ../module/left%>
            <!-- END SIDEBAR -->
            <!-- BEGIN CONTENT -->
            <div class="page-content-wrapper">
                <!-- BEGIN CONTENT BODY -->
                <div class="page-content">
                    <!-- BEGIN PAGE HEADER-->

                    <!-- BEGIN PAGE BAR -->
                    <div class="page-bar">
                        <ul class="page-breadcrumb">
                          <li>
                              <a href="/school/schoollist">院校管理</a>
                              <i class="fa fa-circle"></i>
                          </li>
                          <li>
                              <a href="/school/schoollist">院校列表</a>
                          </li>
                        </ul>
                    </div>
                    <!-- END PAGE BAR -->
                    <!-- BEGIN PAGE TITLE-->
                    <h3 class="page-title"> 院校录入</h3>
                    <!-- END PAGE TITLE-->
                    <!-- END PAGE HEADER-->

                    <div class="profile-content">
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="portlet light ">
                                            <div class="portlet-title tabbable-line">
                                                <ul class="nav nav-tabs" style="float:left;">
                                                    <li class="active">
                                                        <a href="#tab_1_1" data-toggle="tab">基本信息</a>
                                                    </li>
                                                    <li>
                                                        <a href="#tab_1_3" data-toggle="tab">专业信息</a>
                                                    </li>
                                                </ul>
                                            </div>
                                            <div class="portlet-body">
                                                <div class="tab-content">
                                                    <!-- PERSONAL INFO TAB -->
                                                    <div class="tab-pane active" id="tab_1_1">
                                                        <form role="form" class="form-horizontal" action="#">
                                                          <div class="row">
                                                            <div class="col-md-6">
                                                              <div class="form-group">
                                                                <label class="control-label col-md-3">院校名称
                                                                    <span class="required"> * </span>
                                                                </label>
                                                                  <div class="col-md-6">
                                                                      <input type="text" placeholder="" class="form-control" />
                                                                  </div>

                                                              </div>
                                                            </div>

                                                            <div class="col-md-6">
                                                              <div class="form-group">
                                                                  <label class="control-label col-md-3">院校LOGO：</label>
                                                                  <div class="fileinput fileinput-new" data-provides="fileinput">
                                                                    <span class="btn green btn-file">
                                                                        <span class="fileinput-new"> 选择文件 </span>
                                                                        <span class="fileinput-exists"> 更换 </span>
                                                                        <input type="file" name="..."> </span>
                                                                    <span class="fileinput-filename"> </span> &nbsp;
                                                                    <a href="javascript:;" class="close fileinput-exists" data-dismiss="fileinput"> </a>
                                                                </div>
                                                              </div>
                                                            </div>

                                                          </div>



                                                          <div class="row">

                                                            <div class="col-md-6">
                                                              <div class="form-group">
                                                                <label class="control-label col-md-3">托福成绩：
                                                                </label>
                                                                  <div class="col-md-6">
                                                                      <input type="text" placeholder="" class="form-control input-inline input-small" /><span class="help-inline"> 分</span>
                                                                  </div>

                                                              </div>
                                                            </div>

                                                            <div class="col-md-6">
                                                              <div class="form-group">
                                                                <label class="control-label col-md-3">雅思成绩：
                                                                </label>
                                                                  <div class="col-md-6">
                                                                      <input type="text" placeholder="" class="form-control input-inline input-small" /><span class="help-inline"> 分</span>
                                                                  </div>

                                                              </div>
                                                            </div>
                                                          </div>

                                                            <div class="row">

                                                              <div class="col-md-6">
                                                                <div class="form-group">
                                                                  <label class="control-label col-md-3">院校地址：
                                                                  </label>
                                                                    <div class="col-md-6">
                                                                        <input type="text" placeholder="" class="form-control" />
                                                                    </div>

                                                                </div>
                                                              </div>

                                                              <div class="col-md-6">
                                                                <div class="form-group">
                                                                  <label class="control-label col-md-3">网址：
                                                                  </label>
                                                                    <div class="col-md-6">
                                                                        <input type="text" placeholder="" class="form-control" />
                                                                    </div>

                                                                </div>
                                                              </div>
                                                            </div>

                                                            <div class="form-group">

                                                              <label class="control-label col-md-1" style="width:12.36%;">院校简介：
                                                              </label>
                                                                <div class="col-md-9">
                                                                    <textarea class="form-control" rows="10" ></textarea>
                                                                </div>

                                                            </div>
                                                            <div class="form-group">
                                                                <div class="col-md-offset-1 col-md-12" style="margin-left:12.36%;">
                                                                    <a href="#" class="btn green">保存</a>
                                                                </div>
                                                            </div>
                                                        </form>
                                                    </div>
                                                    <!-- END PERSONAL INFO TAB -->
                                                    <!-- CHANGE AVATAR TAB -->
                                                    <!-- END CHANGE AVATAR TAB -->
                                                    <!-- CHANGE PASSWORD TAB -->
                                                    <div class="tab-pane" id="tab_1_3">
                                                      <div class="row" style="margin-bottom:10px;">
                                                        <div class="col-md-12">
                                                          <button id="genpassword" class="btn btn-success" type="button"
                                                          data-target="#response" data-toggle="modal"><i class="fa fa-arrow-left fa-plus"></i> 添加专业</button>

                                                        </div>
                                                      </div>
                                                      <div class="row">
                                                          <div class="col-md-12">
                                                            <div class="" id="sample_1">
                                                                <table class="table table-striped table-bordered table-hover">
                                                                  <thead class="flip-content">
                                                                      <tr>
                                                                          <th >
                                                                            序号
                                                                          </th>
                                                                          <th>
                                                                            专业
                                                                          </th>
                                                                          <td class="numeric"> 代码 </td>
                                                                          <th class="numeric"> 学历 </th>
                                                                          <th class="numeric"> 简介 </th>
                                                                          <th class="numeric"> 操作 </th>
                                                                      </tr>
                                                                  </thead>
                                                                  <tbody>
                                                                    <%for(var i =0;i<15;i++){%>
                                                                      <tr>
                                                                          <td style="text-align:center;"> <a href="#"><%= i+1%></a> </td>
                                                                          <td class="numeric"> 法学院--法学 </td>
                                                                          <td class="numeric"> EX000DR<%= i%> </td>
                                                                          <td class="numeric"> 硕士 </td>
                                                                          <td class="numeric"> 专业排名第五，5年制，毕业后扮发证书 </td>
                                                                          <td style="text-align:center;" >
                                                                            <a data-target="#response" data-toggle="modal"><i class="fa fa-pencil"></i>编辑</a>
                                                                          </td>
                                                                      </tr>
                                                                    <%}%>

                                                                  </tbody>
                                                              </table>
                                                            </div>
                                                          </div>
                                                      </div>




                                                    </div>
                                                    <!-- END CHANGE PASSWORD TAB -->
                                                    <!-- PRIVACY SETTINGS TAB -->
                                                    <!-- END PRIVACY SETTINGS TAB -->
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>







                </div>
                <!-- END CONTENT BODY -->
            </div>
            <!-- END CONTENT -->
        </div>

        <!-- responsive -->
        <div id="response" class="modal fade" tabindex="-1" data-width="760">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
                <h4 class="modal-title">添加专业</h4>
            </div>
            <div class="modal-body">


                  <form role="form" action="#">
                      <div class="row">


                        <div class="col-md-6">
                          <div class="form-group">
                            <label class="control-label">专业名称：</label>
                            <input type="text" placeholder="" class="form-control" />
                          </div>
                        </div>
                        <div class="col-md-6">
                          <div class="form-group">
                            <label class="control-label">学历：</label>
                            <select class="form-control input-small">
                                <option>请选择</option>
                                <option>高中</option>
                                <option>学士</option>
                                <option>硕士</option>
                                <option>博士</option>
                            </select>
                          </div>
                        </div>
                      </div>
                      <div class="form-group">
                          <label class="control-label">专业介绍：</label>
                          <input type="text"  class="form-control" />
                        </div>
                  </form>

            </div>
            <div class="modal-footer">
                <button type="button" class="btn green">保存</button>
            </div>
        </div>


        <!-- END CONTAINER -->
        <!-- BEGIN FOOTER -->
        <% include ../module/bottom%>
        <!-- END FOOTER -->
        <% include ../module/foot%>

        <!-- BEGIN PAGE LEVEL PLUGINS -->
        <script src="/global/plugins/bootstrap-modal/js/bootstrap-modalmanager.js" type="text/javascript"></script>
        <script src="/global/plugins/bootstrap-modal/js/bootstrap-modal.js" type="text/javascript"></script>
        <!-- END PAGE LEVEL PLUGINS -->
    </body>

</html>
